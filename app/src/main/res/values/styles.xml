<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitle_Background_Gray">
        <item name="android:textColor">@color/bg_gray_text_color</item>
        <item name="android:background">@color/bg_gray</item>
    </style>


    <style name="AppLine">
        <item name="android:background">@color/line_color</item>
    </style>

    <!--横线-->
    <style name="AppLine.horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/Line</item>
    </style>

    <!--竖线-->
    <style name="AppLine.vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.3dp</item>
        <item name="android:background">@color/Line</item>
    </style>

</resources>
